<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/fragment_bg"
    android:paddingTop="@dimen/fragement_devis_vertical_margin"
    android:paddingBottom="@dimen/fragement_devis_vertical_margin"
    android:paddingLeft="@dimen/fragement_devis_horizontal_margin"
    android:paddingRight="@dimen/fragement_devis_horizontal_margin">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Informations client"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#85A6D1"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="1020dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Nom"
        android:textColor="#85A6D1" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="1020dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Adresse "
        android:textColor="#85A6D1" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="1020dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/EditText01"
        android:layout_below="@+id/EditText01"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:text="Numéro de téléphone"
        android:textColor="#85A6D1" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Informations préstation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#85A6D1" />

</RelativeLayout>
